{
  "rules": {
    ".read": false,
    ".write": false,
    
    "chatRooms": {
      "$roomId": {
        ".read": "auth != null && (data.child('participants').val().contains(auth.uid))",
        ".write": false,
        
        "messages": {
          "$messageId": {
            ".read": "auth != null && (root.child('chatRooms').child($roomId).child('participants').val().contains(auth.uid))",
            ".write": "auth != null && (root.child('chatRooms').child($roomId).child('participants').val().contains(auth.uid)) && newData.child('senderId').val() == auth.uid",
            ".validate": "newData.hasChildren(['senderId', 'senderName', 'message', 'timestamp', 'type'])"
          }
        },
        
        "typing": {
          "$userId": {
            ".read": "auth != null && (root.child('chatRooms').child($roomId).child('participants').val().contains(auth.uid))",
            ".write": "auth != null && (root.child('chatRooms').child($roomId).child('participants').val().contains(auth.uid)) && $userId == auth.uid"
          }
        }
      }
    },
    
    "userPresence": {
      "$userId": {
        ".read": "auth != null",
        ".write": "$userId == auth.uid"
      }
    },
    
    "notifications": {
      "$userId": {
        ".read": "$userId == auth.uid",
        ".write": false,
        
        "$notificationId": {
          ".read": "$userId == auth.uid",
          ".write": "$userId == auth.uid"
        }
      }
    }
  }
}
